generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model chismes {
  user_id   String    @db.VarChar(48)
  createdAt DateTime  @default(now()) @db.Timestamp(0)
  desc      String    @db.VarChar(2048)
  id        Int       @id @default(autoincrement())
  isActive  Int?      @db.TinyInt
  title     String    @db.VarChar(250)
  updatedAt DateTime? @db.Timestamp(0)
  users     users     @relation(fields: [user_id], references: [id], onUpdate: Restrict, map: "chismes_ibfk_1")

  @@index([user_id], map: "user_id")
}

model session {
  id        String   @id
  userId    String
  expiresAt DateTime
  users     users    @relation(fields: [userId], references: [id], onDelete: Cascade, map: "Session_userId_fkey")

  @@index([userId], map: "Session_userId_fkey")
}

model users {
  id            String        @id
  bio           String?       @db.VarChar(2048)
  birthdate     DateTime      @db.Date
  createdAt     DateTime      @default(now()) @db.Timestamp(0)
  email         String        @db.Text
  firstName     String?       @db.VarChar(40)
  followers     Int?          @db.UnsignedMediumInt
  follows       Int?          @db.UnsignedMediumInt
  gender        users_gender?
  lastName      String?       @db.VarChar(40)
  password_hash String?       @db.VarChar(255)
  profilePhoto  Bytes?        @db.Blob
  status        users_status
  updatedAt     DateTime?     @db.Timestamp(0)
  username      String        @unique(map: "username") @db.VarChar(40)
  chismes       chismes[]
  session       session[]
}

enum users_status {
  A
  S
  B
}

enum users_gender {
  M
  F
  O
  NR
}
